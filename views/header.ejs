<!--建群操作 -->
<div class="modal fade" id="group" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">建群操作</h4>
            </div>
            <from class="form-horizontal" role="form">
            <div class="modal-body " id="groupInfo">
                <div class="form-group">

                    <div class="col-xs-7">
                    <label for="groupName">群名：</label>
                    <input type="text" class="form-control input-group-lg col-sm-3" id="groupName" placeholder="Enter GroupName">
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="modalClose">关闭</button>
                <button type="submit" class="btn btn-primary" id="groupConfirm">确定</button>
            </div>
            </from>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>
    var socket = io.connect();
    var username = '<%= user.username%>';
    $("#search").on("click",function(){
        $.get("search",{fname: $("#friendname").val()},function(data){
            if(data != 'null'){
                $("#friendshow").text(data.username);
            }else{
                $("#friendshow").text("该用户不存在");
            }
        })
    });
    $("#toAddFriend").on('click',function(){
        var data = {
            from:username,
            to:$("#friendname").val()
        }
        socket.emit('agreeFriend',data,function(fn){
            if(fn == 'ok'){
                $("#modalClose").click();
                showFriend(data.to);
            }
        });
    });

    //好友验证
    var from ;
    socket.on('agreeFriend', function (data) {
        from = data.from;
        $("#toAgreeFriend").show();
        $("#infoShow").append(data.from);
    });
    //同意验证
    $("#agreeFriend").on('click', function () {
        $.get('agreeFriend',{fname:from}, function (data) {
            if (data == 'ok') {
                alert('用户添加成功');
            }
            $("#modalClosei").click();
            $("#toAgreeFriend").hide();
            showFriend(from);
        });
    });
    //显示好友
    function showFriend(name) {
        $("#friendList").append('<p>' +
                '<span class="fl1">' + name + '</span>' +
                '<span class="fl2"><span  class="icon icon-mid"><span class="icon-comment-text"></span></span></span>' +
                '<span class="fl3"></span>' +
                '</p>'
        )
    }
    //建立新群
    $('#groupConfirm').on('click',function(){
        $.post('groupEstablish',{name:$("#groupName").val()},function(info){
            if(info == 'success'){
                alert('成功建群！');
                $('#modalClose').click();
            }else{
                alert('该群已存在！');
            }
        })
    })


</script>
<% if(user){%>
<script>
    //如果登陆，发送信息
    socket.emit('online',{name:"<%= user.username%>"});
</script>
<% }%>

